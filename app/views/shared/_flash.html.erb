<% if flash[:notice] %>
    <div class="alert alert-info mt-4" role="alert">
        <%= flash[:notice] %>
    </div>
<% end %>

<% if flash[:alert] %>
    <div class="alert alert-warning mt-4" role="alert">
        <%= flash[:alert] %>
    </div>
<% end %>

<% if flash[:warning] %>
    <div class="alert alert-warning mt-4" role="alert">
        <%= flash[:warning] %>
    </div>
<% end %>

<% if flash[:info] %>
    <div class="alert alert-info mt-4" role="alert">
        <%= flash[:info] %>
    </div>
<% end %>