<% if flash[:success] %>
    <div class="alert alert-success flash__" role="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
        <%= flash[:success] %>
    </div>
<% end %>

<% if flash[:warning] %>
    <div class="alert alert-warning flash__" role="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
        <%= flash[:warning] %>
    </div>
<% end %>

<% if flash[:info] %>
    <div class="alert alert-info flash__" role="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
        <%= flash[:info] %>
    </div>
<% end %>